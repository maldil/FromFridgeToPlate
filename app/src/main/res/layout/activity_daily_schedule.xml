<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DailySchedule" android:background="@color/colorAccent">


    <ListView
            android:layout_width="387dp"
            android:layout_height="495dp"
            android:id="@+id/DailySchedule_schedulelist"
            android:background="@color/colorAccent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_add_activity"/>
    <Button
            android:text="Add Activity"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_activity" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            style="@android:style/Widget.DeviceDefault.Button.Toggle" android:textStyle="bold"
            android:background="@color/colorPrimary"/>
</android.support.constraint.ConstraintLayout>