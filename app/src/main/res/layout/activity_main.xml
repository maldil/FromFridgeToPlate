<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity" android:visibility="visible">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectedFoodText"
            app:fontFamily="@font/muli_extralight" android:textSize="30sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/Image_A" app:layout_constraintHorizontal_bias="0.47"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectedFoodText2"
            app:fontFamily="@font/muli_extralight" android:textSize="30sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.47" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/selectedFoodText"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectedFoodText3"
            app:fontFamily="@font/muli_extralight" android:textSize="30sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.47"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/selectedFoodText2"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/Image_A"
            android:contentDescription="Image_A" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Today Plan"
            android:layout_width="399dp"
            android:layout_height="59dp"
            android:id="@+id/Today_Plan" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@android:style/DeviceDefault.ButtonBar"
            android:background="@color/colorPrimary" android:textSize="18sp"
            android:textColor="@android:color/darker_gray"/>

    <Button
            android:text="Daily Schedule"
            android:layout_width="201dp"
            android:layout_height="42dp"
            android:id="@+id/Add_Schedule_Btn"
            android:background="@color/colorPrimaryDark"
            style="@style/Widget.AppCompat.Button.Borderless" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/Today_Plan"/>
    <Button
            android:text="Food Storage"
            android:layout_width="206dp"
            android:layout_height="42dp"
            android:id="@+id/add_food_btn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/Add_Schedule_Btn" app:layout_constraintHorizontal_bias="0.498"
            android:background="@color/colorPrimaryDark"/>

</android.support.constraint.ConstraintLayout>