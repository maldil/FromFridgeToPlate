<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddActivity" android:id="@+id/activity_add">

    <EditText
            android:layout_width="134dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/auto_duration" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/spinner_activity"
    />
    <Spinner
            android:layout_width="257dp"
            android:layout_height="26dp"
            android:id="@+id/spinner_day" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <Spinner
            android:layout_width="282dp"
            android:layout_height="28dp"
            android:id="@+id/spinner_activity" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/spinner_day"/>
    <Button
            android:text="Submit"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_submit" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/auto_duration" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Duration (h)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Duration" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/auto_duration"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="224dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.632"/>
</android.support.constraint.ConstraintLayout>